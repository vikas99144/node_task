<!doctype html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }
      body { font: 13px Helvetica, Arial; }
      form { background: #000; padding: 3px; position: fixed; bottom: 0; width: 100%; }
      form input { border: 0; padding: 10px; width: 90%; margin-right: .5%; }
      form button { width: 9%; background: rgb(130, 224, 255); border: none; padding: 10px; }
      #messages { list-style-type: none; margin: 0; padding: 0; }
      #messages li { padding: 5px 10px; }
      #messages li:nth-child(odd) { background: #eee; }
    </style>
  </head>
  <body>
    <h2 style="text-align: center;">Private chat</h2>
    <% if (typeof(username) !== 'undefined' && typeof(othername) !== 'undefined'&& typeof(userId) !== 'undefined'&& typeof(otherId) !== 'undefined' ) { %>
      <h3 class="alert alert-warning" style="text-align: center;"><%= username %> /  <%= othername %></h3>
      <input type="hidden" id="userid" name="userid" value="<%= userId %>">

      <input type="hidden" id="otherid" name="otherid" value="<%= otherId %>">
      <% } %>
    <ul id="messages"></ul>
    <form>
      <input id="m" autocomplete="off" /><button>Send</button>
    </form>
  </body>

  <script src="/socket.io/socket.io.js"></script>
<script src="https://code.jquery.com/jquery-1.11.1.js"></script>
<script type="text/javascript">

  $(function () {
    var user =  $('#userid').val();
    var other = $('#otherid').val();
    var chatRoom, chatType; 
  
      var socket = io();
   socket.emit('private',{userId: user, otherId: other});

   socket.on('privateRoom',room =>{
     chatRoom = room.chatRoom;
     chatType = room.chatType
   })

    $('form').submit(function(){
       var data = {
         userId: user,
         otherId: other,
         chatRoom: chatRoom,
         chatType: chatType,
         message: $('#m').val(),
       }
     socket.emit('private_message', data);
      $('#m').val('');
      return false;
    });
    socket.on('recieve_private_message', function(data){
      $('#messages').append($('<li>').text(data.message));
    });
  });
</script>
</html>
